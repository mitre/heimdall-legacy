<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <div data-turbolinks="false">
    <!-- Sidebar user panel (optional) -->

    <!-- search form (Optional) -->
    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <li>
        <a href="/"><i class="fa fa-dashboard"></i> <span>Dashboard</span>
        </a>
      </li>
      <!-- Optionally, you can add icons to the links -->
      <li class="treeview">
        <a href=""><i class="fa fa-edit"></i> <span>Profiles</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to "All Profiles", profiles_path %></li>
          <li>
            <%= form_tag(upload_profile_path, multipart: true, :html => {class: 'form-control'}) do %>
              <div class="input-group">
                <%= label_tag :file, "Upload Profile", :class => "menu-text" %>
                <%= file_field_tag :file, :class => "menu-text" %>
              </div>
              <br>
              <div class="actions">
                <%= submit_tag 'Upload', :class => "btn btn-info" %>
              </div>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href=""><i class="fa fa-edit"></i> <span>Evaluations</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to "All Evaluations", evaluations_path %></li>
          <li>
            <%= form_tag(upload_evaluation_path, multipart: true, :html => {class: 'form-control'}) do %>
              <div class="input-group">
                <%= label_tag :file, "Upload Evaluation", :class => "menu-text" %>
                <%= file_field_tag :file, :class => "menu-text" %>
              </div>
              <br>
              <div class="actions">
                <%= submit_tag 'Upload', :class => "btn btn-info" %>
              </div>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </div>
    <!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
