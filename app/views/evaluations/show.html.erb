  total_count = passed + not_rev + failed + not_test;
  compliance_count = (passed / total_count) * 100;
  $('#passed_count').html(passed);
  $('#failed_count').html(failed);
  $('#not_reviewed_count').html(not_rev);
  $('#not_applicable_count').html(not_app);
  $('#profile_error_count').html(not_test);
  status_data = [
