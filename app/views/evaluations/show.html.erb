      } else if (symbol == 'not_applicable') {
        not_app += 1;
      } else if (symbol == 'not_reviewed') {
        not_rev += 1;
      } else if (symbol == 'passed') {
        passed += 1;
      } else if (symbol == 'failed') {
        failed += 1;
      }
    }
